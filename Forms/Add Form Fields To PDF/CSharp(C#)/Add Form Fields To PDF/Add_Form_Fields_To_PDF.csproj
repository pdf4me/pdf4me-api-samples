        <!-- Project Metadata -->
        <Title>PDF4ME - Add Form Fields to PDF</Title>
        <Description>Sample application demonstrating how to add form fields to PDF documents using the PDF4ME API</Description>
        <Authors>PDF4ME</Authors>
        <Company>PDF4ME</Company>
        <Product>PDF4ME API Samples</Product>
        <Version>1.0.0</Version>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>1.0.0.0</FileVersion>
        
        <!-- Build Configuration -->
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
        <WarningsAsErrors />
        
        <!-- Runtime Configuration -->
        <SelfContained>false</SelfContained>
        <PublishSingleFile>false</PublishSingleFile>
    </PropertyGroup>

</Project>
